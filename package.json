{
  "name": "volunteer",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.18.0",
    "eslint-config-react-app": "^5.0.1",
    "eslint-plugin-flowtype": "^4.2.0",
    "eslint-plugin-react-hooks": "^2.0.1",
    "jwt-decode": "^2.2.0",
    "moment": "^2.23.0",
    "npm": "^6.5.0",
    "pm2": "^3.2.7",
    "pretty-quick": "^1.10.0",
    "react": "^16.9.0",
    "react-datepicker": "^2.8.0",
    "react-day-picker": "^7.3.0",
    "react-dom": "^16.7.0",
    "react-draft-wysiwyg": "^1.12.13",
    "react-emotion": "^9.2.6",
    "react-ga": "^2.5.7",
    "react-phone-number-input": "^2.3.21",
    "react-quill": "^1.3.3",
    "react-redux": "^6.0.0",
    "react-responsive": "^5.0.0",
    "react-router-dom": "^5.0.1",
    "react-rte": "^0.16.1",
    "react-scripts": "^3.0.1",
    "react-show-more-list": "^0.5.2",
    "reactstrap": "^8.0.1",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0"
  },
  "scripts": {
    "start": "REACT_APP_NODE_ENV=LOCAL react-scripts start",
    "build": "react-scripts build",
    "preserve": "REACT_APP_NODE_ENV=LOCAL yarn build",
    "serve": "serve --cors --debug -p 3000 --single build",
    "test": "react-scripts test --env=jsdom",
    "e2e:dev": "concurrently -k -n \"app,mock,e2e\" \"yarn start\" \"yarn e2e:mock\" \"cypress open\"",
    "e2e:prod": "concurrently -k -s first -n \"app,mock,e2e\" \"yarn serve\" \"yarn e2e:mock\" \"yarn e2e:run\"",
    "e2e": "concurrently -k -s first -n \"app,mock,e2e\" \"BROWSER=none yarn start\" \"yarn e2e:mock\" \"yarn e2e:run\"",
    "e2e:mock": "node ./e2e/fixtures/server.js",
    "e2e:run": "wait-on -l http-get://localhost:3000 && cypress run",
    "lint": "eslint src --max-warnings 0 && prettier --check 'src/**/*.js'",
    "lint:fix": "eslint --fix src",
    "prettier": "prettier --config .prettierrc --write 'src/**/*.js'",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "pretty-quick --staged",
      "eslint src --fix",
      "prettier",
      "git add"
    ]
  },
  "devDependencies": {
    "@testing-library/cypress": "^7.0.7",
    "autoprefixer": "^9.6.1",
    "concurrently": "^5.0.0",
    "cors": "^2.8.5",
    "cypress": "^3.4.1",
    "eslint": "^6.2.2",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.5",
    "morgan": "^1.10.0",
    "prettier": "^1.18.2",
    "serve": "^13.0.4",
    "wait-on": "^3.3.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
