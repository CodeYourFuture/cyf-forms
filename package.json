{
  "name": "volunteer",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.18.0",
    "moment": "^2.23.0",
    "react": "^16.9.0",
    "react-dom": "^16.7.0",
    "react-ga": "^2.5.7",
    "react-phone-number-input": "^2.3.21",
    "react-redux": "^6.0.0",
    "react-router-dom": "^5.0.1",
    "react-scripts": "4.0.3",
    "reactstrap": "^8.0.1",
    "redux": "^4.0.4",
    "redux-thunk": "^2.3.0"
  },
  "scripts": {
    "build": "react-scripts build",
    "e2e": "concurrently -k -s first -n \"app,e2e\" \"BROWSER=none yarn start\" \"yarn e2e:run\"",
    "e2e:dev": "concurrently -k -n \"app,e2e\" \"yarn start\" \"cypress open --e2e\"",
    "e2e:prod": "concurrently -k -s first -n \"app,e2e\" \"yarn serve\" \"yarn e2e:run\"",
    "e2e:run": "wait-on -l http-get://localhost:3000 && cypress run",
    "eject": "react-scripts eject",
    "lint": "yarn lint:eslint && yarn lint:prettier --check",
    "lint:eslint": "eslint e2e src --max-warnings 0",
    "lint:prettier": "prettier --config .prettierrc 'e2e/**/*.js' 'src/**/*.js'",
    "lint:fix": "yarn lint:eslint --fix",
    "prepare": "husky install",
    "prettier": "yarn lint:prettier --write",
    "preserve": "REACT_APP_NODE_ENV=LOCAL yarn build",
    "serve": "serve --cors --debug -p 3000 --single build",
    "start": "REACT_APP_NODE_ENV=LOCAL react-scripts start",
    "test": "react-scripts test --env=jsdom"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "import/no-anonymous-default-export": "off",
      "prettier/prettier": [
        "error",
        {
          "arrowParens": "avoid"
        }
      ]
    }
  },
  "lint-staged": {
    "*.js": [
      "pretty-quick --staged",
      "eslint src --fix",
      "prettier"
    ]
  },
  "devDependencies": {
    "@testing-library/cypress": "^8.0.3",
    "concurrently": "^7.4.0",
    "cors": "^2.8.5",
    "cypress": "^10.9.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "morgan": "^1.10.0",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "serve": "^14.0.1",
    "wait-on": "^6.0.1"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
